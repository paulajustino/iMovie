<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/black_panther"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add_favorite"
        style="@style/ButtonHome"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:text="@string/title_favorite_movies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_movie_details"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_movie_details"
        style="@style/ButtonHome"
        android:drawableTop="@android:drawable/ic_menu_info_details"
        android:text="@string/title_details_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_add_favorite" />

</androidx.constraintlayout.widget.ConstraintLayout>